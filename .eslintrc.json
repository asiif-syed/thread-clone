{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "next/core-web-vitals",
  "rules": {
    "@next/next/no-img-element": "off",
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "semi": ["error", "never"],
    "no-undef": "error"
  }
}
